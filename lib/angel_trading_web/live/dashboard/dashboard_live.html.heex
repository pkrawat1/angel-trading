<.header>
  Dashboard
  <:actions>
    <.link
      class="rounded-lg bg-green-100 px-2 py-2 hover:bg-green-200/80"
      href={~p"/client/login"}
    >
      <.icon name="hero-plus" />
      Add client 
    </.link>
  </:actions>
</.header>
<section class="flex flex-col sm:flex-row space-x-5">
  <div :for={client <- @clients} class="w-full">
    <.live_component id={client.client_code} module={PortfolioComponent} {client} />
  </div>
</section>

